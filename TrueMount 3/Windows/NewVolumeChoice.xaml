<Window x:Class="TrueMount_3.Windows.NewVolumeChoice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NewVolumeChoice" Height="243" Width="495" ResizeMode="NoResize" ShowInTaskbar="False" WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner">
    <Grid>
        
        <Button HorizontalAlignment="Left" Margin="25,12,0,0" Name="button1" VerticalAlignment="Top" Width="350">
            <DockPanel>
                <Image Source="../Icons/arrow-right.ico" Height="40" />
                <TextBlock DockPanel.Dock="Left" VerticalAlignment="Center" FontSize="20">
                    My entire hard drive is encrypted.
                </TextBlock>
            </DockPanel>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border BorderThickness="0" CornerRadius="2" BorderBrush="Black">
                        <TextBlock>
                            <ContentPresenter />
                        </TextBlock>
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="BorderThickness" Value="2" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Content="Button" Height="52" HorizontalAlignment="Left" Margin="25,71,0,0" Name="button2" VerticalAlignment="Top" Width="257" />
    </Grid>
</Window>
